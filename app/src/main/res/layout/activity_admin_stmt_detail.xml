<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_StmtDetail">
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/txtstmt"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edt_backgrnd"
        android:hint="Enter the statement">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/txtpoints"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txtstmt"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edt_backgrnd"
        android:hint="Enter the Points">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/txtcoins"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txtpoints"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edt_backgrnd"
        android:hint="Enter the Coins">
    </EditText>


    <Button
        android:id="@+id/setlgstmt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="-6dp"
        android:text="SET statement"
        app:layout_constraintBottom_toBottomOf="parent">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>